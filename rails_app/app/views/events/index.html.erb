<% content_for :title do %>
  Events
<% end %>

<div data-role="page" id="list">


  <div role="main" class="ui-content">
<ul data-role="listview" data-inset="true">


      <% @events.each do |event| %>
          <li><a href="#<%= "page#{event.id}" %>">
            <%= image_tag event.pic %>
          <h2><%= event.title %></h2>
          <p><%= event.description %></p></a>
          </li>
    <% end %>


</ul>
  </div><!-- /content -->
</div><!-- /page -->
 <% @events.each do |event| %>
<div data-role="page" id="<%= "page#{event.id}" %>" >
  <div id="ui-body-test" class="ui-body ui-corner-all ui-body-a" style="margin-bottom:1em;">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= event.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= event.description %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= event.location %>
    </p>

    <p>
      <strong>Event date:</strong>
      <%= event.event_date %>
    </p>

    <p>
      <strong>Slot:</strong>
      <%= event.slot %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= event.price %>
    </p>

    <a href="#" data-rel="back" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-icon-back ui-btn-icon-left" data-role="button" role="button">Back</a>
  </div>


</div><!-- /page -->

<% end %>



